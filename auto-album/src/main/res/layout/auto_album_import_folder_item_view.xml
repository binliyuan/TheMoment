<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    tools:background="@android:color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_folder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/ConstTextInverse1"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/EffectOne.AutoAlbumFolderRoundedStyle"
        tools:ignore="ContentDescription" />

    <com.ss.android.ugc.tools.view.style.StyleTextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:textColor="#EEEEEE"
        android:textSize="14dp"
        app:ts_enable_text_color="false"
        app:ts_font_type="medium"
        tools:ignore="SpUsage"
        tools:text="111" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1" />

    <com.ss.android.ugc.tools.view.style.StyleTextView
        android:id="@+id/tv_folder_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:textColor="#99EEEEEE"
        android:textSize="16dp"
        app:ts_enable_text_color="false"
        tools:ignore="SpUsage"
        tools:text="222" />
</LinearLayout>
