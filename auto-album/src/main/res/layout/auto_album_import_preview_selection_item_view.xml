<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/video_cover"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="25:14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/AlbumDockerItemRounded"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/delete_layout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="-12dp"
        android:layout_marginBottom="-12dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/auto_album_list_delete"
        app:layout_constraintBottom_toTopOf="@id/video_cover"
        app:layout_constraintStart_toEndOf="@id/video_cover"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ConstTextInverse1"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/video_cover"
        app:layout_constraintEnd_toEndOf="@id/video_cover"
        app:layout_constraintStart_toStartOf="@id/video_cover"
        app:layout_constraintTop_toTopOf="@id/video_cover"
        tools:ignore="SmallSp,SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>