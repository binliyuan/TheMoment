<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/auto_record_sticker_item_view_stroke_view"
        style="@style/EffectOne.Recorder_SelectedStrokeView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/EffectOne.Auto_recorder_StickerIconView"
        android:background="@drawable/auto_recorder_none_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/auto_record_sticker_item_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/auto_recorder_item_image_size"
        android:layout_height="@dimen/auto_recorder_item_image_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/EffectOne.Recorder_StickerIconRoundedStyle" />


</androidx.constraintlayout.widget.ConstraintLayout>