<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size android:width="14dp" android:height="14dp"/>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <size android:width="14dp" android:height="14dp"/>
            <gradient
                android:endColor="@color/tab_indicator_end_color"
                android:startColor="@color/tab_indicator_start_color" />
        </shape>
    </item>
</layer-list>