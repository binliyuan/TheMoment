<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="6dp" />
            <gradient
                android:angle="0"
                android:endColor="@color/tab_indicator_end_color"
                android:startColor="@color/tab_indicator_start_color"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp">
        <shape>
            <solid android:color="#000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>