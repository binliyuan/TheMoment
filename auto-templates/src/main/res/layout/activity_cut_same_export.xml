<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/export_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.volcengine.effectone.auto.templates.widget.ExportView
        android:id="@+id/export_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/export_cover"
        app:layout_constraintLeft_toLeftOf="@+id/export_cover"
        app:layout_constraintRight_toRightOf="@+id/export_cover"
        app:layout_constraintTop_toTopOf="@+id/export_cover" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/te_btn_confirm_bg"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/color_EEE"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include layout="@layout/layout_page_title" />
</androidx.constraintlayout.widget.ConstraintLayout>