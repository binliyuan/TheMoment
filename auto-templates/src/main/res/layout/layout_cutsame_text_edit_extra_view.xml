<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/text_box_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/te_text_edit_box"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/ed_input"
            android:layout_width="0dp"
            android:layout_height="54.5dp"
            android:background="@color/color_3D3F43"
            android:gravity="left|center"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:maxLines="2"
            android:paddingStart="38dp"
            android:textColor="@color/color_EEE"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="我是其中一个槽位的模版文字" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/te_btn_confirm_bg"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/color_EEE"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>