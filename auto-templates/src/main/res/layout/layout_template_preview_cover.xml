<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/color_99_000">

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_use"
        android:layout_width="164dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/te_btn_confirm_bg"
        android:gravity="center"
        android:text="使用模板"
        android:textColor="@color/color_EEE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_EEE"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/btn_use"
        app:layout_constraintLeft_toLeftOf="@id/btn_use"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="模板简介，文字不要过长，建议文案内容不超过2行文案。模板简介，文字不要过长，建议文案内容不超过2行文案，模板简介，文字不要过长，建议文案内容不超过2行文案" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/te_templates_info_tv_bg"
        android:paddingStart="9dp"
        android:paddingTop="3dp"
        android:paddingEnd="9dp"
        android:paddingBottom="3dp"
        android:textSize="12sp"
        android:textColor="@color/te_templates_info_tv_color"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="@+id/btn_use"
        android:layout_marginBottom="10dp"
        android:text="7个片段 |  12:34"/>
</androidx.constraintlayout.widget.ConstraintLayout>